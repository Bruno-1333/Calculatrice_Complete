        app:layout_constraintEnd_toStartOf="@+id/btnAdiction"
        app:layout_constraintStart_toEndOf="@+id/btn2"
        app:layout_constraintTop_toBottomOf="@+id/btnPoint" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="66dp"
